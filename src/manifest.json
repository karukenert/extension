

{
    "name": "vue in Content Scripts",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_title": "Vue Popup",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.ts"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-scripts/main.ts"]
        }
    ],
    "permissions": [
        "background",
        "tabs",
        "activeTab"
    ]
}
